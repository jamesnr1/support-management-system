# Support Management System Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Admin authentication secret key (REQUIRED)
# Generate a strong random key: openssl rand -hex 32
ADMIN_SECRET_KEY=your-strong-random-secret-key-here

# CORS allowed origins (comma-separated)
# In production, replace with your actual domain
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Supabase configuration (REQUIRED)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key-here

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================

# OpenAI API key for AI features (optional)
OPENAI_API_KEY=your-openai-api-key-here

# Telegram bot token for notifications (optional)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Sentry DSN for error tracking (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Application environment
ENVIRONMENT=development

# Application version
APP_VERSION=2.0.0

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Backend URL for frontend
REACT_APP_BACKEND_URL=http://localhost:8000

# Frontend environment
REACT_APP_ENVIRONMENT=development

# =============================================================================
# MONITORING SERVICES (OPTIONAL)
# =============================================================================

# Grafana admin password
GRAFANA_PASSWORD=admin

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================

# Uncomment and modify these for production deployment

# ENVIRONMENT=production
# ALLOWED_ORIGINS=https://your-production-domain.com
# REACT_APP_BACKEND_URL=https://api.your-domain.com
# REACT_APP_ENVIRONMENT=production
# LOG_LEVEL=WARNING
